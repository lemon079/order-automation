{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "dist/**",
                "android/**",
                "ios/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": [
                "^build"
            ]
        },
        "android": {
            "cache": false,
            "persistent": true
        },
        "ios": {
            "cache": false,
            "persistent": true
        },
        "type-check": {
            "dependsOn": [
                "^build"
            ]
        }
    }
}